
generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Party {
  id            String             @id @default(uuid())
  name          String
  description   String?
  date          DateTime
  totalAmount   Float
  divideEqually Boolean            @default(false)
  createdAt     DateTime           @default(now())

  items         PartyItem[]        // ✅ opposite side for PartyItem
  participants  PartyParticipant[] // ✅ opposite side for PartyParticipant
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())

  items     PartyItem[]
  parties   PartyParticipant[]
}

model PartyItem {
  id           String   @id @default(uuid())
  name         String
  assignedTo   User?    @relation(fields: [assignedToId], references: [id])
  assignedToId String?
  party        Party    @relation(fields: [partyId], references: [id])
  partyId      String
}

model PartyParticipant {
  id       String  @id @default(uuid())
  user     User    @relation(fields: [userId], references: [id])
  userId   String
  party    Party   @relation(fields: [partyId], references: [id])
  partyId  String
  amount   Float
}
